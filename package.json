{
  "name": "@niyo/lion",
  "version": "1.0.0",
  "description": "L10n application and utilities.",
  "keywords": [
    "localization",
    "l10n"
  ],
  "homepage": "https://github.com/mehmetnyarar/lion#readme",
  "bugs": {
    "url": "https://github.com/mehmetnyarar/lion/issues",
    "email": "mehmetnyarar@gmail.com"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "author": "Mehmet N Yarar <mehmetnyarar@gmail.com> (https://niyo.io)",
  "contributors": [
    "Mehmet N Yarar <mehmetnyarar@gmail.com> (https://niyo.io)"
  ],
  "funding": [],
  "scripts": {
    "reset": "yarn clean && yarn install",
    "clean": "rm -rf .next coverage dist node_modules yarn*",
    "commit": "git add . && git-cz",
    "precommit": "lint-staged",
    "validate": "npm-run-all typings format lint test:cov",
    "typings": "tsc --project tsconfig.json --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,yml,md,html,css,scss}\"",
    "lint": "eslint --fix \"**/*.{js,jsx,ts,tsx}\"",
    "dev:next": "next dev",
    "build:next": "next build",
    "start:next": "next start",
    "dev": "nodemon",
    "build": "next build && tsc --project tsconfig.server.json",
    "start": "cross-env NODE_ENV=production ts-node --project tsconfig.server.json -r tsconfig-paths/register server",
    "start:node": "node dist/index.js",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "next": "^10.0.3",
    "next-i18next": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@testing-library/dom": "^7.28.1",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/react-hooks": "^3.4.2",
    "@testing-library/user-event": "^12.2.2",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.15",
    "@types/jest-axe": "^3.5.1",
    "@types/node": "^14.14.9",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-jsx": "^10.0.0",
    "eslint-config-standard-react": "^11.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-axe": "^4.1.0",
    "jest-runner-eslint": "^0.10.0",
    "lint-staged": "^10.5.2",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.0",
    "react-test-renderer": "^17.0.1",
    "ts-jest": "^26.4.4"
  }
}
